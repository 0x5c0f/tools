# ============================================
# Certd 证书客户端配置文件
# ============================================

# # 日志配置
# log_level: "INFO"                                             # 日志级别：DEBUG, INFO, WARNING, ERROR
# log_format: "%(asctime)s - %(levelname)s - %(message)s"       # 日志格式

# basedir: "/opt/update.ssl"                                    # 证书存储路径
# serverinfo: ""                                                # 服务器信息


# ============================================
# Certd API 配置
# ============================================
certd_base_url: "https://ssl.example.com"                     # Certd服务地址
certd_key_id: ""                                              # API密钥ID
certd_key_secret: ""                                          # API密钥密钥

# ============================================
# 证书配置
# ============================================
cert_ids:                                                     # 要获取的证书ID列表
  - 1                                                         # odalong.com

# ============================================
# 通知配置（Apprise）
# https://github.com/caronc/apprise/wiki
# ============================================
# notification_title: "服务器证书更新监控"                    # 通知标题（可选）
# notification_body_format: "markdown"                        # markdown / text（可选）
apprise_urls:
  # 企业微信 / 钉钉 / Telegram / Email / Slack 等均可通过 Apprise URL 配置
  # 示例请参考 Apprise 文档，这里仅示意格式
  - "tgram://BOT_TOKEN/CHAT_ID"

# ============================================
# 证书格式配置
# https://s.apifox.cn/2e76f8c4-7c58-413b-a32d-a1316529af44/254949529e0
# ============================================
cert_formats:                                                 # 要下载的证书格式列表
  - "crt"                                                     # 全链证书
  - "key"                                                     # 私钥，PEM格式
  - "ic"                                                      # 中间证书/CA证书，PEM格式
  - "oc"                                                      # 单证书，PEM格式，不含证书链
  # - "pfx"                                                     # PFX格式证书
  # - "der"                                                     # DER格式证书
  # - "jks"                                                     # JKS格式证书
  # - "one"                                                     # 一体化证书，crt+key两个字符串拼接的PEM证书

# ============================================
# 域名重启命令配置
# ============================================
# domain_reload_commands:                                     # 各域名对应的重启命令
#   "example.com": "systemctl restart nginx"                  # 明文命令
