# ============================================
# Certd 证书客户端配置文件
# ============================================

# # 日志配置
# log_level: "INFO"                                             # 日志级别：DEBUG, INFO, WARNING, ERROR
# log_format: "%(asctime)s - %(levelname)s - %(message)s"       # 日志格式

# basedir: "/opt/update.ssl"                                    # 证书存储路径
# serverinfo: ""                                                # 服务器信息


# ============================================
# Certd API 配置
# ============================================
certd_base_url: "https://ssl.example.com"                     # Certd服务地址
certd_key_id: ""                                              # API密钥ID
certd_key_secret: ""                                          # API密钥密钥

# ============================================
# 证书配置
# ============================================
cert_ids:                                                     # 要获取的证书ID列表
  - 1                                                         # odalong.com

# ============================================
# 通知配置, 适配企业微信机器人 钉钉机器人
# ============================================
webhook_urls:
  - "https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx"

# ============================================
# 证书格式配置
# https://s.apifox.cn/2e76f8c4-7c58-413b-a32d-a1316529af44/254949529e0
# ============================================
cert_formats:                                                 # 要下载的证书格式列表
  - "crt"                                                     # 全链证书
  - "key"                                                     # 私钥，PEM格式
  - "ic"                                                      # 中间证书/CA证书，PEM格式
  - "oc"                                                      # 单证书，PEM格式，不含证书链
  # - "pfx"                                                     # PFX格式证书
  # - "der"                                                     # DER格式证书
  # - "jks"                                                     # JKS格式证书
  # - "one"                                                     # 一体化证书，crt+key两个字符串拼接的PEM证书

# ============================================
# 域名重启命令配置
# ============================================
# domain_reload_commands:                                       # 各域名对应的重启命令
#   "example.com": "systemctl restart nginx"                    # 明文命令
